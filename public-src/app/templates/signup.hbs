{{outlet}}

<div class="ui column grid">
  <div class="row"></div>
  <div class="row"></div>
  <div class="eight column centered row">
    <div class="five wide column">
      <div class="ui huge center aligned header">Glad to have you on board :)</div>
    </div>
  </div>
  <div class="four column centered row">
    <div class="ui buttons">
      <button class="ui button" {{action 'isStudent'}}>High Schooler</button>
      <div class="or"></div>
      <button class="ui primary button" {{action 'isCollege'}}>College Student</button>
    </div>
  </div>
  <div class="eight column centered row">
    <div class="five wide column">
      <form class="ui center aligned form">
        {{#if highschooler}}
          <div class="two fields">
            <div class="field">
              <input type="text" name="first-name" placeholder="First name">
            </div>
            <div class="field">
              <input type="text" name="last-name" placeholder="Last name">
            </div>
          </div>
          <div class="field">
            <input type="text" name="email" placeholder="Email">
          </div>
          <div class="field">
            <input type="text" name="hschool" placeholder="School">
          </div>
          <div class="field">
            <input type="text" name="int_college1" placeholder="What's your dream college?">
          </div>
          <div class="ui bottom attached basic blue button">Sign up</div>
        {{/if}}
        {{#if collegestudent}}
          <div class="two fields">
            <div class="field">
              <input type="text" name="first-name" placeholder="First name">
            </div>
            <div class="field">
              <input type="text" name="last-name" placeholder="Last name">
            </div>
          </div>
          <div class="field">
            <input type="text" name="email" placeholder="Email">
          </div>
          <div class="field">
            <input type="text" name="college" placeholder="College">
          </div>
          <div class="ui bottom attached blue button">Sign up</div>
        {{/if}}
      </form>
    </div>
  </div>
</div>
<div id="twenty"></div>
